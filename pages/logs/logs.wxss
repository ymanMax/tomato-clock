.sum{
    display: flex;
    flex-wrap: wrap;
    width: 750rpx;
    height: 350rpx;
    border: 10rpx solid #eeeeee;
  }
  .sum .sum_item{
    width: 375rpx;
    height: 160;
    text-align: center;
  }
  .sum .sum_item .sum_item_title{
    height: 120rpx;
    line-height: 120rpx;
    font-size: 30rpx;
    color: #6B747E;
  }
  .sum .sum_item .sum_item_val{
    height: 40rpx;
    line-height: 40rpx;
    color: #E7624F;
  }
  .detail{
    width: 700rpx;
    margin: 0 auto;
  }
  .detail_title{
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
  }
  .detail_title .detail_title_text{
    flex: 1;
    font-size: 35rpx;
  }
  .detail_title .detail_title_type{
    flex: 1;
    text-align: right;
    font-size: 30rpx;
  }
  .detail_title .detail_title_type text{
    margin-left: 10rpx;
  }
  .active{
    color: #E7624F;
  }
  .list_item{
    display: flex;
    height: 60rpx;
  }

  .chart-container {
    width: 700rpx;
    height: 400rpx;
    margin: 30rpx auto;
    background-color: #fff;
    border-radius: 10rpx;
    padding: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  }

  .chart-title {
    text-align: center;
    font-size: 35rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    color: #333;
  }

  ec-canvas {
    width: 100%;
    height: 100%;
  }
    line-height: 60rpx;
    margin-top: 30rpx;
  }
  /* .list_item > view{
    width: 200rpx;
  } */
  .list_item .list_item_date{
    width: 300rpx;
    font-size: 30rpx;
    text-align: left;
  }
  .list_item .list_item_cate{
    width: 250rpx;
    font-size: 30rpx;
    text-align: center;
  }
  .list_item .list_item_time{
    width: 150rpx;
    font-size: 35rpx;
    text-align: right;
  }